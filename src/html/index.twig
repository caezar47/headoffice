                    "active": '', 
                },
                {
                    "name":"Наши услуги", 
                    "link": page.services, 
                    "active": '', 
                },
                {
                    "name":"Как мы работаем",
                    "link": page.works, 
                    "active": '', 
                },
                {
                    "name":"Контакты", 
                    "link": page.contacts, 
                    "active": '', 
                },
            ],
            logo_aos:'data-aos="fade-logotip" data-aos-delay="300"',
            nav_aos:'data-aos="fade-up" data-aos-duration="1500"',
            lang_aos:'data-aos="fade-up" data-aos-duration="1500"',
            lang: [
                {
                    "name":"Ру", 
